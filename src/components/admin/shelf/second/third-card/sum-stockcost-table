import React from "react";
import { calcTotalSales, calcTotalWithdraw, calcTotalStockCost } from "../../../../../utils/shelfUtils";

const ShelfSummary = ({ shelfProducts }) => {
  const totalSalesShelf = calcTotalSales(shelfProducts);
  const totalWithdrawShelf = calcTotalWithdraw(shelfProducts);
  const totalStockCostShelf = calcTotalStockCost(shelfProducts);  // Calculate total stock cost

  return (
    <div className="mt-4">
      <div className="text-right text-sm text-blue-500 space-y-4">
        <p>
          Total Sales Amount for Shelf :{" "}
          <span className="text-green-700">{totalSalesShelf.toFixed(2)}</span>
        </p>
        <p>
          Total Withdraw Amount for Shelf :{" "}
          <span className="text-orange-600">{totalWithdrawShelf.toFixed(2)}</span>
        </p>
      </div>

      <div className="mt-6 overflow-x-auto">
        <table className="min-w-full table-auto text-xs text-gray-700 border-collapse">
          <thead className="bg-gray-100">
            <tr>
              <th className="px-3 py-2 text-center border">Row No</th>
              <th className="px-3 py-2 text-center border">Product Code</th>
              <th className="px-3 py-2 text-center border">Product Name</th>
              <th className="px-3 py-2 text-center border">Stock Quantity</th>
              <th className="px-3 py-2 text-center border">Purchase Price (Exc. VAT)</th>
              <th className="px-3 py-2 text-center border">Stock Cost</th>
            </tr>
          </thead>
          <tbody>
            {shelfProducts.map((product) => {
              const stockCost =
                (product.stockQuantity ?? 0) * (product.purchasePriceExcVAT ?? 0);
              return (
                <tr key={product.codeProduct}>
                  <td className="px-3 py-2 border text-center">{product.rowNo}</td>
                  <td className="px-3 py-2 border text-center">
                    {String(product.codeProduct).padStart(5, "0")}
                  </td>
                  <td className="px-3 py-2 border">{product.nameProduct ?? "-"}</td>
                  <td className="px-3 py-2 border text-center">
                    {product.stockQuantity ?? "-"}
                  </td>
                  <td className="px-3 py-2 border text-right">
                    {product.purchasePriceExcVAT?.toFixed(2) ?? "-"}
                  </td>
                  <td className="px-3 py-2 border text-right">
                    {stockCost ? stockCost.toFixed(2) : "-"}
                  </td>
                </tr>
              );
            })}
          </tbody>
          <tfoot>
            <tr className="bg-gray-200 font-semibold">
              <td colSpan={5} className="px-3 py-2 text-right">Total Stock Cost</td>
              <td className="px-3 py-2 text-right text-green-700">
                {totalStockCostShelf.toFixed(2)}
              </td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  );
};

export default ShelfSummary;
